<div class="flex flex-row flex-wrap items-center justify-end space-x-4">
  <label for="language">
    {{concat (t 'language' ':')}}
  </label>
  <PowerSelect
    id="language"
    @selected={{this.selectedLanguage}}
    @options={{this.languages}}
    @onChange={{this.setLocale}} as |name|
  >
    {{name}}
  </PowerSelect>
</div>